      <div class="text-xl mb-4 hover:text-slate-500 ">
        <h4><a href="/blogs/{{blog.id}}">{{blog.title}}</a></h4>
      </div>

      <div class=" text-xs my-4">
        <button class="border-indigo-300 border-2 rounded-md p-1 px-2 bg-sky-300 hover:bg-sky-200 transform" data-id="{{blog.id}}">Delete</button>
      </div>
      
    </div>
    {{/each}}
  </div>
  {{/if}}

</section>

