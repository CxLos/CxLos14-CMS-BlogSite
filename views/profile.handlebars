
<section>

  <div class="">
    <div class="">
      <h2 class="text-center text-4xl welcome pt-10" >Welcome, {{user}} !</h2>
    </div>
  </div>

  {{#if blogs.length}}
  <div class="bg-pink-300 border-4 border-slate-800 rounded-md mt-14 ml-14 boxes2" id="blog-list">

    <div class="border-b-4 border-slate-800 p-4" id="blog-list">
      <h1 class="text-xl">My Characters:</h1>
    </div>

    {{#each blogs as |blog|}}
